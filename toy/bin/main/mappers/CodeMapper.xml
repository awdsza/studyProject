<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="com.toy.mapper.CodeMapper">
 
    <insert id="insertParentCode" parameterType="com.toy.code.CodeDto">
        insert into tc_code_parents
            values
        (#{parent_code},#{code_title},now(),'system',now(),'system')
    </insert>
    
    <insert id="insertChildCode" parameterType="com.toy.code.CodeDto">
        insert into tc_code_child
            values
        (#{parent_code},#{child_code},#{code_title},now(),'system',now(),'system')
    </insert>
    <update id="deleteChildCode" parameterType="com.toy.code.CodeDto">
    delete from tc_code_child where child_code = #{child_code}
    </update>
    
 	<select id="listParentCode" resultType="com.toy.code.CodeDto">
 		select parent_code,code_title from tc_code_parents
 	</select>
 	
 	<select id="listChildCode" resultType="com.toy.code.CodeDto">
 		select child_code,code_title from tc_code_child where parent_code = #{parent_code}
 	</select>
</mapper>
